<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yedam.zippy.used.mapper.UsedMapper">
	<!-- 전체조회 -->
	<select id="usedList" resultType="UsedProductVO"
		parameterType="hashmap">
		SELECT *
		FROM used_product
		WHERE product_location LIKE
		'%'||#{location}||'%'
		AND product_name LIKE '%'||#{keyword}||'%'
		AND
		product_category LIKE '%'||#{category}||'%'
		<if test="checked == 1">
			AND is_sell=0
			OR is_sell=1
		</if>
		<if test="checked == 0">
			AND is_sell=0
		</if>
		<!-- 최저가순 -->
		<if test="dropbox == 0">
			ORDER BY product_price ASC
		</if>
		<!-- 최고가순 -->
		<if test="dropbox == 1">
			ORDER BY product_price DESC
		</if>

		<!-- <if test="dropVal == 판매자평점">
			ORDER BY product_date DESC
		</if> -->
			<!-- ORDER BY product_date DESC -->
	</select>


	<!-- 등록 -->
	<insert id="insertUsed" parameterType="usedProductVO">
		<selectKey keyProperty="productNo" order="BEFORE"
			resultType="int">
			SELECT NVL(MAX(product_no),0) +1 AS productNo FROM
			used_product
		</selectKey>
		INSERT INTO used_product
		(
		productNo,


		)
		VALUES
		(
		)
	</insert>
	<!-- 수정 -->
	<update id="updateUsed" parameterType="usedProductVO">
		UPDATE used_product

	</update>

	<delete id="deleteUsed" parameterType="usedProductVO">
		DELETE FROM used_product
		WHERE product_no = ${productNo}
	</delete>
</mapper>